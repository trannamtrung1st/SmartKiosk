@{
}

<!-- Main row -->
<div class="row">
    <div class="col-12">
        <div class="card card-secondary">
            <div class="card-header">
                <h3 class="card-title">Thông tin liên hệ</h3>
            </div>
            <!-- /.card-header -->
            <!-- form start -->
            <form role="form" id="form-update-contact">
                <div class="card-body">
                    <div class="form-group">
                        <label>Tựa đề</label>
                        <input type="text" name="contact_title" class="form-control" placeholder="Tựa đề trang">
                    </div>
                    <div class="form-group">
                        <label>Nội dung</label>
                        <textarea class="form-control" name="contact_content" style="height:300px" placeholder="Nội dung"></textarea>
                    </div>
                </div>
                <!-- /.card-body -->

                <div class="card-footer">
                    <button type="button" class="btn btn-primary" onclick="updateContactConfig()">Cập nhật</button>
                </div>
            </form>
        </div>
        <!-- /.card-body -->
    </div>
</div>
