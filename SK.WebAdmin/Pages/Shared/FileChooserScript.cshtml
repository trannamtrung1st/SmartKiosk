<script>
    const fileChooserData = {
        tag: null
    };

    function showFileChooser(tag) {
        fileChooserData.tag = tag;
        $('html').addClass('overflow-hidden');
        $('body').addClass('overflow-hidden');
        $('.modal-file-chooser').show();
        $('#elfinder').trigger('resize');
    }

    function closeFileChooser() {
        $('html').removeClass('overflow-hidden');
        $('body').removeClass('overflow-hidden');
        $('.modal-file-chooser').hide();
    }
</script>